# Environment Configuration Template
# Copy this file to .env and update with your actual values

# API Configuration
API_BASE_URL=https://api.ecommerce-demo.com
API_TIMEOUT=30
API_RETRY_COUNT=3

# Test Environment
TEST_ENVIRONMENT=staging
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=SecureTestPassword123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=AdminPassword123!

# Database Configuration (if needed for test data setup)
DATABASE_URL=postgresql://user:password@localhost:5432/testdb

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
SESSION_TIMEOUT=3600

# External Services
PAYMENT_GATEWAY_URL=https://sandbox.payment-provider.com
SHIPPING_API_URL=https://api.shipping-provider.com

# Test Configuration
PARALLEL_WORKERS=4
TEST_DATA_CLEANUP=true
SCREENSHOT_ON_FAILURE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=test_execution.log

# CI/CD Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_NOTIFICATIONS=admin@yourcompany.com

# Performance Testing
LOAD_TEST_USERS=10
LOAD_TEST_DURATION=300
BENCHMARK_THRESHOLD_MS=2000

# Security Testing
SECURITY_SCAN_ENABLED=true
VULNERABILITY_THRESHOLD=medium
